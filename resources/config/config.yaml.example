# reprint config
reprint:
  # Choose the locale to localize content for: en, fr, ru etc.
  locale: 'en'

# blog config
blog:
  # Choose a theme by name: `bootstrap3-default` or 'foundation6-default'.  
  theme: 'develop'
  title: 'reprint'
  subtitle: 'blockchain powered blog engine'
  # Filter the content to
  filters:
    # Accounts to load activity of
    accounts:
      'greymass':
        - post
        - reblog
    tags: # delete all tags for all posts display
      - greymass

# steemd connection
steem:
  # Steem Node to retreive data
  # host: 'http://node.golos.ws' for Golos (russian fork of Steem)
  host: 'http://node.steem.ws'
